<% title @article.name %>

<p class="author"><em>from <%=h @article.author_name %></em></p>

<%=simple_format @article.content %>

<p><%= link_to "Back to Articles", articles_path %></p>

<% unless @article.users.empty? %>
  <h2><%= pluralize(@article.users.size, 'user') %></h2>

  <div id="users">
  <% for user in @article.users %>
    <div class="user">
      <strong><%= link_to_unless user.site_url.blank?, h(user.author_name), h(user.site_url) %></strong>
      <em>on <%= user.created_at.strftime('%b %d, %Y at %H:%M') %></em>
      <%=simple_format user.content %>
    </div>
  <% end %>
  </div>
<% end %>

<h3>Add your user:</h3>
<%= render :partial => 'users/form' %>
